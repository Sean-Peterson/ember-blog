<div class="posts">
  <h1>{{model.title}}<br></h1>
  <h4>By: {{model.author}}</h4>
  <p>{{model.date}}<br></p>
  <img src="{{model.image}}">
  <p>{{model.body}}</p>
  <br>
  <h2> Comments </h2>
  <div class="comment-div">
    {{#each model.comments as |comment|}}
      {{comment-tile comment=comment destroyComment="destroyComment" updateComment="updateComment"}}
    {{/each}}
  </div>
  {{update-post post=model update="update"}}

  {{new-comment saveComment="saveComment" post=model}}
  <button class="btn" {{action 'destroyPost' model}}>Delete Post</button>
</div>
